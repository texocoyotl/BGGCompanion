<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotlist_row_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/hotlist_row_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textIsSelectable="false"
            android:textSize="34sp"
            android:layout_margin="@dimen/text_margin"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/hotlist_row_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/hotlist_row_thumbnail_description"
            android:transitionName="@string/transition_name_image"
        />

        <TextView
            android:id="@+id/hotlist_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Pandemic Legacy"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_gravity="start|bottom"
            android:textSize="24sp"
            />
    </LinearLayout>

</android.support.v7.widget.CardView>